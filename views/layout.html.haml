!!! 5
%html
  %head
    %title SF Food Trucks
    %meta{name: 'viewport', content: 'width=device-width', 'initial-scale' => '1.0'}

    / Bootstrap
    %link{href: '//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css', rel: 'stylesheet'}

    / Custom styles
    %link{href: '/css/styles.css', rel: 'stylesheet'}

    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      %script{type: 'text/javascript', src: '//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js'}
      %script{type: 'text/javascript', src: '//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'}

  %body
    /
      Navbar
    .navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
      .container
        .navbar-header
          %a.navbar-brand{href: '/'} SF Food Trucks
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{href: '/about'} About

    .main
      = yield

    /
      Templates for Backbone views
    %script{type: 'text/html', id: 'truck-template'}
      %h3
        <%= applicant %>
      %p
        <%= address %>
      %p
        %h5
          Food Items
        %ul
          <%= _.map(foodItems, function(item) { return "<li>" + item + "</li>"; } ).join("") %>

    /
      JavaScript files
    %script{type: 'text/javascript', src: '//code.jquery.com/jquery-1.10.2.min.js'}
    %script{type: 'text/javascript', src: '//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js'}
    %script{type: 'text/javascript', src: '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js'}
    %script{type: 'text/javascript', src: '//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.0/backbone-min.js'}
    %script{type: 'text/javascript', src: '//maps.googleapis.com/maps/api/js?key=AIzaSyBQ4MH-wKvaXQRzMPUTR8cjn22015aXmr8&sensor=false&libraries=places'}

    -# Load JavaScript file for the specific view if there is one
    - if @js_file
      %script{type: 'text/javascript', src: "/js/#{@js_file}.js"}
    %script{type: 'text/javascript', src: '/js/models/truck.js'}
    %script{type: 'text/javascript', src: '/js/views/map_view.js'}
    %script{type: 'text/javascript', src: '/js/views/truck_view.js'}
